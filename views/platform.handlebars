<br>
<div class="container">
    <div class="row" style="height:30px"></div>
            
    <div class="row">
        <div class="col s4">
            <div class="collection" id="results-table" data-userid="{{user.dataValues.id}}">                
                <a href="#!" class="collection-item"><b>Company: </b>{{user.dataValues.company}}</a>
                <a href="#!" class="collection-item"><b>Account Number: </b>{{user.dataValues.account_number}}</a>
                <a href="#!" class="collection-item"><b>Corporate Discount: </b>{{user.dataValues.discount}}%</a>            
            </div>
        </div>
        <div class="col s1"></div>
        <div class="col s6">
            <canvas id="myChart" width="200" height="100"></canvas>
        </div>
    </div>

    <div class="row">
        <div class="col s10"></div>
        <div class="col s1">
            <a class="btn-floating btn-large waves-effect waves-light red" href="/platform/addline/{{user.dataValues.id}}">Add</i></a>
        </div>
    </div>

    <div class="row">
        <div class="col s12" id="dropdownTag">
            <ul class="collapsible" data-collapsible="accordion">
                {{#each platforms}}
                <li class="plan" data-id="{{dataValues.id}}">
                    <div class="collapsible-header">
                        <div class="col s6">
                            <p>{{dataValues.phone_number}}</p>
                        </div>
                        <div class="col s6">
                            <p>{{dataValues.end_user}}</p>
                        </div>
                    </div>
                    <div class="collapsible-body">  
                        <div class="row">      
                            <div class="col s6">
                                {{!-- {{dataValues.username}} --}}
                                <span><b>Device: </b>{{dataValues.device_name}}</span><br>
                                <span><b>Rate Plan: </b>{{dataValues.rateplan}}</span><br>
                                <span id="active-bool"><b>Status: </b>
                                    {{#if active}}
                                        Active
                                    {{else}}
                                        Suspended
                                    {{/if}}
                                </span><br><br>
                                <span><b>Voice Use: </b>{{dataValues.voice_usage}} mins</span><br>
                                <span><b>Data Use: </b>{{dataValues.data_usage}} Gb</span><br>
                                <span><b>SMS Use: </b>{{dataValues.sms_usage}} texts</span><br>
                            </div>
                            <div class="col s6">
                                <a class="btn waves-effect waves-light center" style="background-color:#f44336" data-active="true" type="submit" id="activeBtnColor">Suspend  
                                    <i class="material-icons">not_interested</i>
                                </a>
                                <br>
                                <br>
                                <div class="input-field">
                                    <select id="rate-plan">
                                        <option value="" disabled selected>Rate Plans</option>
                                        <option value="1">Mobile Select 1Gb</option>
                                        <option value="3">Mobile Select 3Gb</option>
                                        <option value="5">Mobile Select 5Gb</option>
                                        <option value="7">Mobile Select 7Gb</option>
                                        <option value="10">Mobile Select 10Gb</option>
                                    </select>
                                    <label>Rateplan</label>
                                    <input id="id" type="hidden" value="{{dataValues.id}}">
                                    <button class="btn waves-effect waves-light center valign-wrapper" type="submit" id="submit-rateplan" name="action">Submit<i class="material-icons right">send</i></button>
                                </div>    
                            </div>
                        </div> 
                    </div>    
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<script type="text/javascript" src="/js/platform.js"></script>